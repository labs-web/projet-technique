@startuml usecase-global
left to right direction
skinparam packageStyle rectangle

' Schéma de couleurs : noir sur blanc uniquement
skinparam actorBackgroundColor white
skinparam actorBorderColor black
skinparam usecaseBackgroundColor white
skinparam usecaseBorderColor black
skinparam packageBackgroundColor white
skinparam packageBorderColor black
skinparam arrowColor black

' Acteurs
actor "Visiteur" as Guest
actor "Utilisateur Connecté" as User
actor "Auteur" as Author
actor "Éditeur" as Editor
actor "Administrateur" as Admin
actor "Client API Externe" as APIClient

' Relations de spécialisation (héritage)
User --|> Guest
Author --|> User
Editor --|> User
Admin --|> User

' Système
rectangle "Système Blog - Projet Technique" {
  
  ' Fonctionnalités Publiques
  usecase "Consulter la page d'accueil" as UC1
  usecase "Consulter la liste des articles" as UC2
  usecase "Consulter le détail d'un article" as UC3
  usecase "Consulter les articles par catégorie" as UC4
  usecase "Rechercher des articles" as UC5
  
  ' Authentification
  usecase "S'inscrire" as UC6
  usecase "Se connecter" as UC7
  usecase "Se déconnecter" as UC8
  
  ' Profil Utilisateur
  usecase "Accéder à son profil" as UC9
  
  ' Gestion Articles (Auteur)
  usecase "Gérer ses articles" as UC10
  usecase "Gérer les catégories de ses articles" as UC11
  
  ' Gestion Complète (Éditeur)
  usecase "Gérer tous les articles" as UC12
  usecase "Gérer les catégories" as UC13
  
  ' Administration Système
  usecase "Gérer les utilisateurs" as UC14
  usecase "Gérer les rôles et permissions" as UC15
  usecase "Accéder au back-office" as UC16
  usecase "Gérer toutes les entités du système" as UC17
  
  ' API REST
  usecase "Consulter les articles via API REST" as UC18
  usecase "Consulter les catégories via API REST" as UC19
  usecase "S'authentifier via token" as UC20
  usecase "Accéder aux ressources sécurisées" as UC21
}

' Relations Visiteur
Guest -- UC1
Guest -- UC2
Guest -- UC3
Guest -- UC4
Guest -- UC5
Guest -- UC6
Guest -- UC7

' Relations Utilisateur Connecté
User -- UC8
User -- UC9

' Relations Auteur
Author -- UC10
Author -- UC11

' Relations Éditeur
Editor -- UC12
Editor -- UC13

' Relations Administrateur
Admin -- UC14
Admin -- UC15
Admin -- UC16
Admin -- UC17

' Relations Client API Externe
APIClient -- UC18
APIClient -- UC19
APIClient -- UC20
APIClient -- UC21

' Relations d'inclusion/extension
UC21 ..> UC20 : <<include>>

@enduml
