@startuml usecase-back_office
left to right direction
skinparam packageStyle rectangle

' Schéma de couleurs : noir sur blanc uniquement
skinparam actorBackgroundColor white
skinparam actorBorderColor black
skinparam usecaseBackgroundColor white
skinparam usecaseBorderColor black
skinparam packageBackgroundColor white
skinparam packageBorderColor black
skinparam arrowColor black

actor "Utilisateur Connecté" as User
actor "Auteur" as Author
actor "Éditeur" as Editor
actor "Administrateur" as Admin

User <|-- Author
User <|-- Editor
User <|-- Admin

rectangle "Back-Office (Espace Connecté)" {
  ' Fonctionnalités Utilisateur Standard
  usecase "Se déconnecter" as UC_Logout
  usecase "Accéder à son profil" as UC_Profile

  ' Fonctionnalités Auteur (RG-02 Propriété & RG-01 Usage Catégories)
  usecase "Gérer les articles" as UC_Manage_Articles
  usecase "Gérer ses articles" as UC_Manage_Own_Articles
  usecase "Utiliser les catégories (Sélection)" as UC_Use_Cats

  ' Fonctionnalités Éditeur (RG-01 & RG-02 Full Access)
  usecase "Gérer tous les articles" as UC_Manage_All_Articles
  usecase "Gérer les catégories" as UC_Manage_Cats
  
  ' Fonctionnalités Admin (RG-04 Système)
  usecase "Accéder au back-office global" as UC_Admin_Access
  usecase "Gérer les utilisateurs" as UC_Manage_Users
  usecase "Gérer les rôles et permissions" as UC_Manage_Roles
  usecase "Gérer la configuration du site" as UC_Manage_Settings
  usecase "Consulter les logs techniques" as UC_View_Logs
  usecase "Modérer les commentaires" as UC_Moderate_Comments
}

' Relations Utilisateur
User -- UC_Logout
User -- UC_Profile

' Relations Auteur
Author -- UC_Manage_Own_Articles
Author -- UC_Use_Cats

' Relations Éditeur
Editor -- UC_Manage_All_Articles
Editor -- UC_Manage_Cats

' Relations Admin
Admin -- UC_Admin_Access
Admin -- UC_Manage_Users
Admin -- UC_Manage_Roles
Admin -- UC_Manage_Settings
Admin -- UC_View_Logs
Admin -- UC_Moderate_Comments

' Relations d'extension (Variantes de Scope Article RG-02)
UC_Manage_Own_Articles <.. UC_Manage_Articles : <<extend>>
UC_Manage_All_Articles <.. UC_Manage_Articles : <<extend>>

@enduml
